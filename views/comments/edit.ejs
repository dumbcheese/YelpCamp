<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center; margin-bottom: 25px;">Edit Comment</h1>

        <div style="width: 30%; margin: 0 auto;">
    <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
        <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
        </div>
       
        <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
        </div>
        <a href="/campgrounds">Go back</a>
    </form>
</div>
</div>
</div>
